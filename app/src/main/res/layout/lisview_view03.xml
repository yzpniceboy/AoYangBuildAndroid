<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
        <TextView
            android:padding="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_style3_title"
            android:textSize="20dp"
            android:text="教育部：“逼格”等低俗语言涌现到非治不可的程度"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/image_z_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/textimage"
            android:layout_below="@+id/text_style3_title"
            android:layout_toLeftOf="@+id/image_left_view"
            android:layout_toStartOf="@+id/image_left_view" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_left_view"
            android:src="@mipmap/textimage"
            android:layout_below="@+id/text_style3_title"
            android:layout_toLeftOf="@+id/image_right_view"
            android:layout_toStartOf="@+id/image_right_view" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_right_view"
            android:src="@mipmap/textimage"
            android:layout_below="@+id/text_style3_title"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:paddingLeft="7dp"
            android:drawableLeft="@mipmap/popular_icon"
            android:text="*****企业   10分钟前"
            android:layout_width="317dp"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/comment_icon"
            android:id="@+id/text_style2_time"
            android:layout_below="@+id/image_left_view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1600"
            android:layout_alignBaseline="@+id/text_style2_time"
            android:layout_alignBottom="@+id/text_style2_time"
            android:layout_toRightOf="@+id/text_style2_time"
            android:layout_toEndOf="@+id/text_style2_time"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp" />


</RelativeLayout>