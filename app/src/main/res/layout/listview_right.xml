<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="match_parent">
    <com.saint.aoyangbuulid.mine.utils.XCRoundImageView
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src = "@mipmap/image"
        android:id="@+id/image_user" />
    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="张三"
        android:textSize="20sp"
        android:id="@+id/textview_right_name"
        android:layout_marginTop="19dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/image_user"
        android:layout_toEndOf="@+id/image_user" />
    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="职位: 销售经理"
        android:textSize="10sp"
        android:textColor="#0099cc"
        android:id="@+id/textview_professional_title"
        android:layout_below="@+id/textview_right_name"
        android:layout_toRightOf="@+id/image_user"
        android:layout_toEndOf="@+id/image_user"
        android:layout_marginTop="15dp" />
    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginLeft="40dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_right_phone"
        android:layout_below="@+id/image_user"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>