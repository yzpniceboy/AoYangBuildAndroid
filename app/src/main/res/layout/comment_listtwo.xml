<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
        <ImageView
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/image"
            android:id="@+id/imageview_people"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:paddingTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comment_text"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:id="@+id/textview_name"
            android:layout_toRightOf="@+id/imageview_people"
            android:layout_toEndOf="@+id/imageview_people" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8dp"
            android:text="十分钟前"
            android:layout_alignBottom="@+id/imageview_people"
            android:layout_alignLeft="@+id/textview_name"
            android:layout_alignStart="@+id/textview_name"
            android:id="@+id/textview_time" />
        <ImageButton

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/point_like_icon_not"
            android:layout_marginLeft="42dp"
            android:layout_marginStart="42dp"
            android:layout_alignBottom="@+id/imagebutton_left"
            android:layout_alignLeft="@+id/imagebutton_left"
            android:layout_alignStart="@+id/imagebutton_left"
            android:id="@+id/imagebutton_right"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="61"
            android:textSize="10sp"
            android:id="@+id/comment_text_number_left"
            android:layout_alignBottom="@+id/imagebutton_right"
            android:layout_toRightOf="@+id/imagebutton_left"
            android:layout_toEndOf="@+id/imagebutton_left"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/comment_icon_not"
            android:id="@+id/imagebutton_left"
            android:layout_alignBottom="@+id/textview_name"
            android:layout_toRightOf="@+id/textview_name"
            android:layout_toEndOf="@+id/textview_name"
            android:layout_marginLeft="123dp"
            android:layout_marginStart="123dp"

        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23"
            android:textSize="10sp"
            android:id="@+id/commnet_text_number_right"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:layout_alignBottom="@+id/imagebutton_right"
            android:layout_toRightOf="@+id/imagebutton_right"
            android:layout_toEndOf="@+id/imagebutton_right" />
        <TextView
            android:padding="15dp"
            android:id="@+id/text_nr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你是大三的拉的撒了的几岁啦到了撒娇拉萨就撒了拉萨拉萨拉萨就六大寺到了撒娇 的撒啦就"
            android:layout_below="@+id/imageview_people"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp" />
</RelativeLayout>